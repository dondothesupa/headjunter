
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> userManager
@{
    var thisUserId = userManager.GetUserId(User);
}
@model User


<div style="overflow-x: hidden; overflow-y: scroll;width: auto; height: 500px;  padding: 5px; border: solid 1px black;" class="layer mt-5">
    <div id="result"></div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="mt-3">
        <a onclick="openForm('@thisUserId')" style="cursor: pointer">Отправить</a>
    </div>
    <div id="answerdiv-@thisUserId" style="display:none">
        <input class="form-control" id="answertext-@thisUserId">
        <input type="hidden" id="userId-@thisUserId" value="@userManager.GetUserId(User)">
        <input  class="btn btn-dark mb-5 mt-2" type="button" id="postComment" onclick="sendMessage('@thisUserId')" value="Сообщения"/>
    </div>
}